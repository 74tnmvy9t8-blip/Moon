<head>
  <meta charset="UTF-8">
  <title>The moon today</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background-color: transparent;
    }
  </style>
</head>
<body>
  <!-- Â© wdisseny -->
  <div id="contain_moon" style="text-align:center;padding-top:5px;padding-bottom:5px;font-size:18px">
    <div style="font-weight:bold">The moon today</div>
    <div style="margin-top:-7px;margin-bottom:-15px;padding:30px;filter:drop-shadow(0 0 30px hsl(220,100%,15%))"></div>
    <div>.</div>
    <div style="font-size:small">.</div>
  </div>

  <script>
    (function () {
      var today = new Date();
      var d = today.getDate();
      var m = document.querySelectorAll("#contain_moon div");
      var xhr = new XMLHttpRequest();
      var url =
        "https://www.icalendar37.net/lunar/api/?" +
        "lang=en" +
        "&month=" + (today.getMonth() + 1) +
        "&year=" + today.getFullYear() +
        "&size=100" +
        "&lightColor=rgb(245,245,245)" +
        "&shadeColor=rgb(17,17,17)" +
        "&t&LDZ=" + (new Date(today.getFullYear(), today.getMonth(), 1).getTime() / 1000);

      m[1].style.height = "100px";

      xhr.onreadystatechange = function () {
        if (xhr.readyState === 4 && xhr.status === 200) {
          var data = JSON.parse(xhr.responseText);
          m[1].innerHTML = data.phase[d].svg;
          if (typeof moon_widget_loaded === "function") {
            moon_widget_loaded(data);
          }
          m[2].innerHTML = data.phase[d].npWidget;
          m[3].innerHTML = "Next full moon<br>" + data.nextFullMoon;
        }
      };

      xhr.open("GET", url, true);
      xhr.send();
    })();
  </script>
</body>
